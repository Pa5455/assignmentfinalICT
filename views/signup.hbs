{{> welcomemenu id="signup"}}

<form class="ui stacked segment form" action="/register" method="POST">
  <h3 class="ui header">Register</h3>
  <div class="three fields">
    <div class="field">
      <label>First Name</label>
      <input placeholder="First Name" type="text"  name="firstName">
    </div>
    <div class="field">
      <label>Last Name</label>
      <input placeholder="Last Name" type="text"  name="lastName">
    </div>
    <div class="field">
      <label>Gender</label>
      <input placeholder="Male or Female" type="text"  name="gender">
    </div>
  </div>
  <div class="field">
    <label>Email</label>
    <input placeholder="Email" type="text" name="email">
  </div>
  <div class="field">
    <label>Address</label>
    <input placeholder="Address" type="text" name="address">
  </div>
  <div class="field">
    <label>Weight</label>
    <input placeholder="Weight" type="text" name="startingWeight">
  </div> 
  <div class="field">
    <label>Height</label>
    <input placeholder="Height" type="text" name="heght">
  </div> 
  <div class="field">
    <label>Password</label>
    <input placeholder="Create a passwor" type="password" name="password">
  </div>
  <button class="ui blue submit button">Submit</button>
</form>